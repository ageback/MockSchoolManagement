@using MockSchoolManagement.Application.Courses.Dtos
@using MockSchoolManagement.ViewModels.Course
@model CourseCreateViewModel
@{ ViewBag.Title = "创建课程信息";}

<form asp-action="create" method="post" class="mt-3">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CourseID"></label>
        <div class="col-sm-10">
            <input asp-for="CourseID" placeholder="请输入课程编码" value="" class="form-control" />
            <span class="text-danger" asp-validation-for="CourseID"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Title"></label>
        <div class="col-sm-10">
            <input asp-for="Title" placeholder="请输入课程名称" value="" class="form-control" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Credits"></label>
        <div class="col-sm-10">
            <input asp-for="Credits" placeholder="请输入课程学分" value="" class="form-control" />
            <span class="text-danger" asp-validation-for="Credits"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="DepartmentList"></label>
        <div class="col-sm-10">
            <select asp-for="DepartmentID" placeholder="请输入课程学分" value="" class="custom-select mr-sm-2" asp-items="@Model.DepartmentList" >
                <option value="">请选择</option>
            </select>
            <span class="text-danger" asp-validation-for="DepartmentList"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" type="submit">创建</button>
        </div>
    </div>
</form>